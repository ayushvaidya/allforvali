<div class="section header-section">
  <h1 class="title-container">Your source for curated loops.</h1>
  <div class="button-row display-inline-block">

    <% if user_signed_in? %>

      <%= link_to new_loop_path do %>

        <div class="button-primary float-left" id="visitUploadPage">Upload</div>
      <% end %>

      <% else %>

      <%= link_to new_user_registration_path do %>

        <div class="button-primary float-left" id="visitRegistrationPage">Upload</div>
      <% end %>

    <% end %>

    <% if !user_signed_in? %>

      <%= link_to new_user_registration_path do %>

        <div class="button-secondary float-left">Sign Up</div>

      <% end %>
    <% end %>
  </div>
</div>

<div class="section">
<div class="section-border-title">
  <div class="section-border"></div>
  <div class="title-container">
    <div class="title">Browse</div>
  </div>
</div>


  <div class="browse-filter-container" style="margin-top: 80px">

    <%= link_to browse_all_path do %>
      <div class="browse-filter">
        All
      </div>
    <% end %>

    <%= link_to browse_verified_path do %>
      <div class="browse-filter-selected">
        Verified
      </div>
    <% end %>
  </div>
  <%= render 'loop-container' %>
  
</div>